<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourNamJai"
    android:background="@color/gray"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:layout_margin="24dp"
            android:orientation="vertical"
            android:background="@drawable/shadow"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewYouchoose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Namjai that you choose"
                android:textColor="@color/darkPink"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="24dp" />

            <ListView
                android:id="@+id/listViewnamjaiyouchoose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="60dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="24dp"
            android:background="@drawable/shadow"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewChooseyou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your namjai is chosen"
                android:textColor="@color/darkPink"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="268dp" />

            <ListView
                android:id="@+id/listViewnamjaiischosen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="304dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>